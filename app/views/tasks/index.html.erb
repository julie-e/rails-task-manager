<h1 class="text-center">List of tasks</h1>

<div class="container">
  <div class="row">
    <ul><% @tasks.each do |task| %>
      <li class="list-inline text-center">
      <div class="col-xs-12 col-sm-6 col-lg-3">
        <h3><%= link_to task.name, task_path(task) %></h3>
        <p><%= link_to "Update", edit_task_path(task) %></p>
        <p><%= link_to "Delete", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
      </div>
      </li>
    <% end %>
    </ul>
  </div>
</div>

<h3 class="text-center"><%= link_to "Create new task", new_task_path(@task) %></h3>
